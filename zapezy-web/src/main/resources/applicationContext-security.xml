<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                    http://www.springframework.org/schema/security
                    http://www.springframework.org/schema/security/spring-security-3.1.xsd">

    <http use-expressions="true">
        <intercept-url pattern="/**" access="permitAll"/>
        <form-login
                login-page="/signIn"
                default-target-url="/"
                authentication-failure-url="/signInFailed"
                />
        <logout logout-success-url="/signOut" />
    </http>

    <authentication-manager>
        <authentication-provider ref="defaultAuthenticationProvider" />
        <!--<authentication-provider>-->
            <!--<user-service>-->
                <!--<user name="esi" password="s" authorities="admin"/>-->
                <!--<user name="joe" password="common" authorities="user"/>-->
            <!--</user-service>-->
        <!--</authentication-provider>-->
    </authentication-manager>

    <global-method-security pre-post-annotations="enabled" />

</beans:beans>