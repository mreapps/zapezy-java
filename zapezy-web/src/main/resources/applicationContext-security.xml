<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:security="http://www.springframework.org/schema/security"
       xmlns:sec="http://www.springframework.org/schema/security"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
               http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
            http://www.springframework.org/schema/security
            http://www.springframework.org/schema/security/spring-security-3.1.xsd">

    <security:global-method-security pre-post-annotations="enabled" secured-annotations="enabled"/>

    <security:http auto-config="true" use-expressions="true" access-denied-page="/accessDenied">
        <sec:form-login
                login-page="/signIn"
                default-target-url="/home"
                authentication-failure-url="/signInFailed"
                />
        <security:logout logout-success-url="/signIn" />
        <security:remember-me
                key="zapezyRememberMeKey"
                token-validity-seconds="864000"
                user-service-ref="userServiceImpl"
                />
    </security:http>

    <bean class="org.springframework.security.authentication.encoding.ShaPasswordEncoder" id="passwordEncoder">
        <constructor-arg index="0" value="512" />
    </bean>

    <bean class="com.mreapps.zapezy.service.service.impl.SaltSourceImpl" id="saltSource"/>

    <security:authentication-manager>
        <security:authentication-provider user-service-ref="userServiceImpl">
            <security:password-encoder ref="passwordEncoder">
                <security:salt-source ref="saltSource"/>
            </security:password-encoder>
        </security:authentication-provider>
    </security:authentication-manager>

</beans>